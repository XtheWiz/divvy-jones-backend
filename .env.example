# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgres://user:password@localhost:5432/divvy_jones

# Test Database (used for integration tests)
# IMPORTANT: Use a separate database to avoid data loss
DATABASE_URL_TEST=postgres://user:password@localhost:5432/divvy_jones_test

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Storage Configuration (Sprint 005)
# =============================================================================

# Storage Provider: 'local' for development, 's3' for production
STORAGE_PROVIDER=local

# Local Storage (when STORAGE_PROVIDER=local)
STORAGE_LOCAL_PATH=./uploads

# S3 Storage (when STORAGE_PROVIDER=s3)
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_S3_URL_EXPIRY=3600  # Pre-signed URL expiry in seconds (default: 1 hour)

# =============================================================================
# Exchange Rate API (Sprint 005)
# =============================================================================

# Exchange rate provider API key (exchangerate-api.com)
# EXCHANGE_RATE_API_KEY=your-api-key

# Cache TTL in milliseconds (default: 1 hour)
EXCHANGE_RATE_CACHE_TTL=3600000
